# Developer Intelligence Assistant - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for JWT token signing (generate a secure random string)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Encryption key for credential storage (generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-fernet-encryption-key-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL - SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///./data/dia.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/dia_db

# For MySQL (alternative):
# DATABASE_URL=mysql://username:password@localhost:3306/dia_db

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Ollama model to use for AI responses
OLLAMA_MODEL=llama3.2

# Ollama server URL (if running on different host)
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# DATA SOURCE INTEGRATIONS
# =============================================================================
# Note: These are now configured per-user through the UI, but you can set
# defaults here for development/testing

# Confluence Configuration (optional - for testing)
# CONFLUENCE_URL=https://your-domain.atlassian.net
# CONFLUENCE_USERNAME=your-email@company.com
# CONFLUENCE_API_TOKEN=your-confluence-api-token

# Bitbucket Configuration (optional - for testing)
# BITBUCKET_WORKSPACE=your-workspace-name
# BITBUCKET_USERNAME=your-bitbucket-username
# BITBUCKET_APP_PASSWORD=your-bitbucket-app-password

# JIRA Configuration (optional - for testing)
# JIRA_URL=https://your-domain.atlassian.net
# JIRA_USERNAME=your-email@company.com
# JIRA_API_TOKEN=your-jira-api-token

# =============================================================================
# SLACK BOT CONFIGURATION
# =============================================================================

# Slack Bot Token (starts with xoxb-)
# SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Slack App Token (starts with xapp-)
# SLACK_APP_TOKEN=xapp-your-slack-app-token

# =============================================================================
# ORACLE CLOUD INFRASTRUCTURE (PRODUCTION)
# =============================================================================

# OCI Configuration for production deployment
# OCI_CONFIG_FILE=~/.oci/config
# OCI_CONFIG_PROFILE=DEFAULT
# OCI_COMPARTMENT_ID=your-compartment-ocid

# Oracle Generative AI Service
# OCI_GENAI_ENDPOINT=https://generativeai.us-chicago-1.oci.oraclecloud.com
# OCI_GENAI_MODEL_ID=your-model-id

# Oracle Vector Database
# OCI_VECTOR_DB_ENDPOINT=your-vector-db-endpoint
# OCI_VECTOR_DB_USERNAME=your-vector-db-username
# OCI_VECTOR_DB_PASSWORD=your-vector-db-password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# API Base URL
API_BASE_URL=http://localhost:8000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Enable debug mode (development only)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# SYNC CONFIGURATION
# =============================================================================

# Default sync intervals (in minutes)
INCREMENTAL_SYNC_INTERVAL=60
FULL_SYNC_INTERVAL=1440

# Webhook timeout (in seconds)
WEBHOOK_TIMEOUT=30

# Maximum documents per sync
MAX_DOCUMENTS_PER_SYNC=1000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Vector database configuration
CHROMA_DB_PATH=./data/chroma_db
VECTOR_DIMENSION=384

# Embedding model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Maximum context length for AI responses
MAX_CONTEXT_LENGTH=4000

# Number of search results to consider
MAX_SEARCH_RESULTS=10

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Enable metrics collection
ENABLE_METRICS=true

# Metrics endpoint
METRICS_ENDPOINT=/metrics

# Health check endpoint
HEALTH_CHECK_ENDPOINT=/health

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# Sync rate limiting (syncs per hour per data source)
SYNC_RATE_LIMIT_PER_HOUR=10

# =============================================================================
# FILE STORAGE
# =============================================================================

# Data directory for file storage
DATA_DIR=./data

# Maximum file upload size (in MB)
MAX_FILE_SIZE_MB=10

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================

# SMTP configuration for notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# From email address
# FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================

# Redis URL for caching and session storage
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable SQL query logging (development only)
SQL_ECHO=false

# Enable auto-reload for development
AUTO_RELOAD=true

# Enable CORS for all origins (development only)
CORS_ALLOW_ALL=false